<%- include('../layouts/user-header') %>





<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-12 ">
            <div class="card">
                <div class="row">
                    <div class="col-md-7 col-lg-5">
                        <div class="images container p-3">
                            <div class="text-center "> 

                                <img class="image-responsive" id="main-image" src="/public/images/product-img/<%=product.image%>" width="350"  /> 
                            </div>
                            <div class="thumbnail text-center pt-3">
                                <%images.forEach(function(img){%>

                                <img onclick="change_image(this)" src="/public/images/product-img/<%=img%>" width="70">
                                <%})%>
                            
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-5">
                        <div class="product p-4">
                            <div class="mt-4 mb-3">
                                <h2 class=""><%= product.title%></h2>
                                <div class="price d-flex flex-row align-items-center"> <span class="act-price">â‚¹<%= product.price%></span>
                                    </div>
                            </div>
                            <p class="about"><%= product.description%></p>
                            <div class="cart mt-4 align-items-center"> <button onclick="addToCart('<%=product._id%>')" class="btn text-uppercase mr-2">Add to cart</button> <button onclick="addToWishlist('<%=product._id%>')" class="btn"><i class="fa fa-heart text-light"></i></button></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

